<html>
  <head>
    <meta charset="utf-8">
    <meta lang="en-us">
    <meta name="viewport" content="width=device-width">

    <title>Secret Santa</title>

    <link rel="icon" type="image/png" href="/santa/graphics/favicon.png">

    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="/santa/css/santa.css">

    <script type="text/javascript" src="/santa/js/santa.js"></script>

    <script>
      const results = santa(8238);
      function handleClick (name) {
        const text = document.getElementById('you-get');
        text.innerHTML = name + ', you get: ' + results[name];

        let buttons = document.getElementsByTagName('button');
        for (let button of buttons) {
          if (button.innerHTML == name) {
            button.classList.remove('not-selected');
            button.classList.add('selected');
          } else {
            button.classList.remove('selected');
            button.classList.add('not-selected');
          }
        }
      }

      function bodyOnLoad () {
        let buttons = document.getElementsByTagName('button');
        for (let button of buttons) {
          button.onclick = handleClick.bind(null, button.innerHTML);
        }
      }
    </script>
  </head>

  <body onload="bodyOnLoad();">
    <p class="message">Click your button to see who you get!</p>
    <div class="buttons">
      <div class="row1">
        <button>Tyler</button>
        <button>Kyle</button>
        <button>Allie</button>
        <button>Ajmal</button>
      </div>
      <div class="row2">
        <button>Mama</button>
        <button>Ddogg</button>
        <button>Stefanie</button>
      </div>
    </div>

    <p id="you-get">???</p>
  </body>
</html>
